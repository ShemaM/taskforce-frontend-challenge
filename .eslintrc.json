{
  "env": {
    "browser": true,
    "es2015": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "plugins": ["react"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "indent": "off",
    "quotes": "off",
    "semi": "off",
    "no-empty": "warn",
    "react/jsx-key": "off",
    "no-undef": "off",
    "no-unused-vars": "off",
    "react/prop-types": "off",
    "no-cond-assign": ["error", "always"]
  }
}
